generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// models

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  passwd_s String
}


model Evento{
  id Int @id @default(autoincrement())
  nombre String
  lugar String
  ciudad_id Int @default(1)
  ciudad Ciudad @relation(fields:[ciudad_id], references: [id])
  created_at DateTime @default(now())
  update_at DateTime @updatedAt
}

model Ciudad{
  id Int @id @default(autoincrement())
  nombre String
  status String
  Eventos Evento[]
  created_at DateTime @default(now())
  update_at  DateTime @updatedAt
}

model Participante{
  id Int @id @default(autoincrement())
  id_user Int
  id_evento Int
}

model Entradas{
  id Int @id @default(autoincrement())
  nombre String
  precio Int
}